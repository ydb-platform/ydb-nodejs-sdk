{
	"name": "ydb-sdk",
	"version": "6.0.0-alpha.1",
	"license": "Apache 2.0",
	"description": "Node.js bindings for working with YDB API over gRPC",
	"keywords": [
		"ydb",
		"sdk",
		"grpc",
		"database",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ydb-platform/ydb-nodejs-sdk.git"
	},
	"scripts": {
		"prebuild": "rm -rf ./dist/*",
		"build": "npm run build:cjs && npm run build:esm",
		"build:esm": "tsc --project tsconfig.json --outDir ./dist/esm",
		"build:cjs": "tsc --project tsconfig.json --module commonjs --verbatimModuleSyntax false --moduleResolution node10 --outDir ./dist/cjs && echo >./dist/cjs/package.json '{\"type\":\"commonjs\"}'",
		"format": "prettier --write --ignore-unknown '.' '!dist'",
		"attw": "attw --pack"
	},
	"type": "module",
	"sideEffects": false,
	"main": "./dist/cjs/index.js",
	"types": "./dist/cjs/index.d.ts",
	"module": "./dist/esm/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@grpc/grpc-js": "^1.12.5",
		"protobufjs": "^7.4.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.2",
		"@types/node": "^22.10.5",
		"prettier": "^3.4.2",
		"typescript": "^5.7.2"
	},
	"engineStrict": true,
	"engines": {
		"node": ">=18",
		"npm": ">=9"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf"
	}
}
